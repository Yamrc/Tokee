{
	"compilerOptions": {
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"target": "ESNext",
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"strict": true,
		"types": [
			"vite/client"
		],
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			],
			"@features/*": [
				"src/features/*"
			],
			"@shared/*": [
				"src/shared/*"
			],
			"@services/*": [
				"src/services/*"
			],
			"@hooks/*": [
				"src/hooks/*"
			],
			"@components/*": [
				"src/components/*"
			]
		}
	},
	"include": [
		"src/**/*",
		"src/**/*.d.ts"
	]
}